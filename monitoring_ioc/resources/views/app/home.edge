<script>
    function graph(module_id, updated_at, value) {
        const canva = document.createElement('canvas');
        canva.id = `chartLine${module_id}`;
        const labels = [`${updated_at}`];
        const data = {
        labels: labels,
        datasets: [
            {
            label: "record value",
            backgroundColor: "hsl(252, 82.9%, 67.8%)",
            borderColor: "hsl(252, 82.9%, 67.8%)",
            data: value,
            },
        ],
        };
        
        const configLineChart = {
            type: "line",
            data,
            options: {},
        };
        
        var chartLine = new Chart(
            document.getElementById(`chartLine${module_id}`),
            configLineChart
        );
        return canva;
    }
</script>

